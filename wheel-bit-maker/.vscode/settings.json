{
    "typescript.tsdk": "node_modules/typescript/lib",

    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "files.exclude": {
        "**/bundle/js": true,
        "**/bundle/libs": true,
        "**/.tmp": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
    },
    "search.exclude": {
        "**/bundle/js": true,
        "**/bundle/libs": true,
        "**/.tmp": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/package-lock.json": true,
        "**/*.svg": true,
    },
    "files.associations": {
      "**/*.msc": "lua",
      "**/*.tls": "ini",
      "**/*.cps": "javascript",
    },
    "editor.formatOnSave": false,
    "editor.fontSize": 16
}